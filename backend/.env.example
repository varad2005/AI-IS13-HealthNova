# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/rural_health

# Gemini API Configuration (for Healthcare Chatbot)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Razorpay Payment Gateway Configuration
# Get your test keys from: https://dashboard.razorpay.com/app/keys
# IMPORTANT: Use test mode keys only (rzp_test_xxx). Never commit real keys to git!
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx

# Razorpay Webhook Secret (for payment notifications)
# Generate in: Dashboard > Settings > Webhooks
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxx

# Optional: Upload folder (default is backend/uploads)
# UPLOAD_FOLDER=./uploads
